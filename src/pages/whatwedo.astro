---
import Line from "@/components/Line.astro";
import WhatWeDoBlock from "@/components/WhatWeDoBlock.astro";
import Layout from "@/layouts/Layout.astro";
import {
  CircleQuestionMark,
  Clapperboard,
  Component,
  Keyboard,
  Megaphone,
  Pencil,
  PersonStanding,
  Smartphone,
  Utensils,
} from "lucide-react";
---

<Layout>
  <main
    class="min-h-screen flex flex-col items-center py-24 px-4 md:px-24 w-full"
  >
    <Line />
    <div
      class="flex flex-col md:flex-row justify-center md:justify-around items-center text-center w-full gap-8 md:gap-0"
    >
      <CircleQuestionMark
        size={80}
        strokeWidth={1}
        className="text-light md:self-center "
      />
      <div class="order-1 md:order-2">
        <h1
          class="text-light font-fancy text-[clamp(2rem,6vw,4rem)] md:text-[clamp(3rem,4vw,5rem)] mb-4 md:mb-6"
        >
          What <span class="bg-golden px-2">we do</span>
        </h1>
        <p
          class="text-white/70 text-base md:text-lg text-center md:text-right leading-relaxed max-w-xs md:max-w-lg"
        >
          We specialize in creating compelling visual content that elevates your
          brand and drives engagement.
        </p>
      </div>
    </div>

    <Line />

    <div class="w-full flex flex-col mt-8 space-y-16">
      <!-- 1 -->
      <section class="flex flex-col w-full text-left">
        <h2
          class="font-fancy text-[clamp(2rem,3vw,5rem)] text-golden2 flex items-center gap-8 w-fit"
        >
          <span class="text-4xl text-light">01</span> Social Media Content
        </h2>
        <p
          class="leading-12 md:leading-14 text-[clamp(1.3rem,2vw,3rem)] px-4 text-light"
        >
          Short-form videos, reels, and photos <br /> tailored for virality and engagement.
        </p>
      </section>

      <!-- 2 -->

      <section class="flex flex-col w-full md:text-right">
        <h2
          class="font-fancy text-[clamp(2rem,3vw,5rem)] text-golden2 flex md:self-end items-center gap-8 w-fit"
        >
          <span class="text-4xl text-light">02</span> Community Management
        </h2>
        <p
          class="leading-12 md:leading-14 text-[clamp(1.3rem,2vw,3rem)] px-4 text-light max-w-3xl md:self-end"
        >
          We run your Instagram, Facebook TikTok, including stories, captions,
          engagement, and growth.
        </p>
      </section>

      <!-- 3 -->

      <section class="flex flex-col w-full text-left">
        <h2
          class="font-fancy text-[clamp(2rem,3vw,5rem)] text-golden2 flex items-center gap-8 w-fit"
        >
          <span class="text-4xl text-light">03</span> Graphic Design
        </h2>
        <p
          class="leading-12 md:leading-14 text-[clamp(1.3rem,2vw,3rem)] max-w-3xl px-4 text-light"
        >
          Logos, branding kits, printed materials, social posts, menus, and
          more.
        </p>
      </section>

      <!-- 4 -->

      <section class="flex flex-col w-full md:text-right">
        <h2
          class="font-fancy text-[clamp(2rem,3vw,5rem)] text-golden2 flex items-center md:self-end gap-8 w-fit"
        >
          <span class="text-4xl text-light">04</span> Google & Meta Ads
        </h2>
        <p
          class="leading-12 md:leading-14 text-[clamp(1.3rem,2vw,3rem)] max-w-3xl px-4 md:self-end text-light"
        >
          Ad creation, setup, audience targeting, and monthly analytics reports.
        </p>
      </section>

      <!-- 5 -->

      <section class="flex flex-col w-full text-left">
        <h2
          class="font-fancy text-[clamp(2rem,3vw,5rem)] text-golden2 flex items-center gap-8 w-fit"
        >
          <span class="text-4xl text-light">05</span> Professional Photography &
          Video
        </h2>
        <p
          class="leading-12 md:leading-14 text-[clamp(1.3rem,2vw,3rem)] max-w-3xl px-4 text-light"
        >
          We capture your story, brand, and services with cinematic quality.
        </p>
      </section>

      <!-- 6 -->

      <section class="flex flex-col w-full md:text-right">
        <h2
          class="font-fancy text-[clamp(2rem,3vw,5rem)] text-golden2 md:self-end flex items-center gap-8 w-fit"
        >
          <span class="text-4xl text-light">06</span> Menu Design & Digital Screens
        </h2>
        <p
          class="leading-12 md:leading-14 text-[clamp(1.3rem,2vw,3rem)] max-w-3xl md:self-end px-4 text-light"
        >
          We design your physical and digital menus, including setup for display
          TVs.
        </p>
      </section>
      <!-- 7 -->

      <section class="flex flex-col w-full text-left">
        <h2
          class="font-fancy text-[clamp(2rem,3vw,5rem)] text-golden2 flex items-center gap-8 w-fit"
        >
          <span class="text-4xl text-light">07</span> App Setup & Management
        </h2>
        <p
          class="leading-12 md:leading-14 text-[clamp(1.3rem,2vw,3rem)] max-w-3xl px-4 text-light"
        >
          We create, optimize, and manage your presence on DoorDash, Uber Eats,
          Grubhub, and others.
        </p>
      </section>
    </div>
    <div class="mt-20 self-center">
      <h2
        class="text-[clamp(2rem,3vw,5rem)] font-bold text-golden mb-6 text-left"
      >
        Ready to <span class="text-light">elevate</span><br /> your online presence?
      </h2>

      <button
        class="border border-golden text-light text-lg font-medium px-6 py-4 bg-golden rounded-lg hover:bg-golden2 hover:text-white transition-colors cursor-pointer"
      >
        <a href="/form"> Fill up a quick form </a>
      </button>
    </div>
  </main>

  <!-- Call to Action Section -->
</Layout>
